{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "array",
    "items": {
        "type": "object",
        "properties": {
            "source_id": {"type": "string", "minLength": 1, "maxLength": 50},
            "entity_id": {"type": "string", "minLength": 1, "maxLength": 50},
            "source_type": {
                "type": "string",
                "enum": ["youtube", "rss", "twitter", "website"]
            },
            "details": {"type": "object"}
        },
        "required": ["source_id", "entity_id", "source_type", "details"],
        "additionalProperties": false
    }
}
