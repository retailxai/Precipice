# RetailXAI Environment Variables Example
# Copy this file to .env and fill in your actual values

# Database Configuration
DB_HOST=localhost
DB_NAME=retailxai
DB_USER=retailxai_user
DB_PASSWORD=your_db_password

# API Keys for Data Collection
YOUTUBE_API_KEY=your_youtube_api_key_here
CLAUDE_API_KEY=your_claude_api_key_here

# New Agent API Keys
LINKEDIN_API_KEY=your_linkedin_api_key_here
LINKEDIN_ACCESS_TOKEN=your_linkedin_access_token_here
LINKEDIN_COMPANY_ID=your_linkedin_company_id_here

NEWS_API_KEY=your_news_api_key_here

REDDIT_CLIENT_ID=your_reddit_client_id_here
REDDIT_CLIENT_SECRET=your_reddit_client_secret_here

SEC_API_KEY=your_sec_api_key_here  # Optional

# Social Media Publishing
TWITTER_CONSUMER_KEY=your_twitter_consumer_key
TWITTER_CONSUMER_SECRET=your_twitter_consumer_secret
TWITTER_ACCESS_TOKEN=your_twitter_access_token
TWITTER_ACCESS_TOKEN_SECRET=your_twitter_access_token_secret

# Email Configuration
SUBSTACK_EMAIL_ADDRESS=your_substack_email@example.com
EMAIL_USER=your_email_user
EMAIL_PASSWORD=your_email_password
DRAFT_EMAIL_RECIPIENT=drafts@example.com

# Slack Notifications
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK
SLACK_BOT_TOKEN=xoxb-your-slack-bot-token-here

# Optional: Override default configuration
AGENT_CONFIG_PATH=config/agents.yaml
